# EditorConfig aide à maintenir une cohérence de codage entre éditeurs
# Place ce fichier à la racine du projet

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[*.jsx]
indent_size = 2

[*.tsx]
indent_size = 2
